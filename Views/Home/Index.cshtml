@{
    ViewData["Title"] = "Home Page";
}

@model User

<div class="container mt-5">
        
            <div class="d-flex flex-column justify-content-center border border-dark w-50">
                <div class="ml-3">
                    <h4>Enter Your Information:</h4>
                </div>
                <form asp-action="Submit" asp-controller="Home" method="post">
                    <div class="form-group mt-2 ml-3 mr-3">
                        <label asp-for="FirstName"></label>
                        <input class="form-control" asp-for="FirstName">
                        <span asp-validation-for="FirstName"></span>
                    </div>
                    <div class="form-group ml-3 mr-3">
                        <label asp-for="LastName"></label>
                        <input class="form-control" asp-for="LastName">
                        <span asp-validation-for="LastName"></span>
                    </div>
                    <div class="form-group ml-3 mr-3">
                        <label asp-for="Age">Age:</label>
                        <input class="form-control" asp-for="Age">
                        <span asp-validation-for="Age"></span>
                    </div>
                    <div class="form-group ml-3 mr-3">
                        <label asp-for="Email">Email:</label>
                        <input class="form-control" asp-for="Email">
                        <span asp-validation-for="Email"></span>
                    </div>
                    <div class="form-group ml-3 mr-3">
                        <label asp-for="Password">Password:</label>
                        <input class="form-control" asp-for="Password">
                        <span asp-validation-for="Password"></span>
                    </div>
                    <div class="mb-3 ml-3 d-flex justify-content-start">
                        <input type="submit" value="Submit" class="btn btn-info btn-outline-dark">
                    </div>
                </form>
            </div>
        </div>